{
  "name": "aragog",
  "version": "0.1.0",
  "description": "Distributed web scraping framework",
  "author": "Fei Liu",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch src --exec node --inspect -r ts-node/register ./src/main.ts",
    "build": "rimraf dist && tsc -p tsconfig.server.json && cp src/headless/jquery*.js dist/headless",
    "init-docker": "rimraf docker/aragog-server/package.json docker/aragog-server/yarn.lock docker/aragog-server/dist && cp -r dist package.json yarn.lock docker/aragog-server",
    "build:client": "rimraf client/lib && tsc -d -p tsconfig.client.json && node script/after-client-build.js",
    "server": "node dist/main.js",
    "lint": "tsc --noEmit -p tsconfig.server.json && tsc --noEmit -p tsconfig.client.json && eslint --ext .ts ./src ./client ./test",
    "test": "jest --verbose --forceExit",
    "test:cov": "yarn test --coverage",
    "upload-cov": "codecov --disable=gcov"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.13",
    "@types/cheerio": "^0.22.21",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.7",
    "@types/lodash": "^4.14.158",
    "@types/puppeteer": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "codecov": "^3.7.2",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "amqplib": "^0.6.0",
    "axios": "^0.20.0",
    "cheerio": "^1.0.0-rc.3",
    "fs-extra": "^9.0.1",
    "iconv-lite": "^0.6.2",
    "lodash": "^4.17.19",
    "log4js": "^6.3.0",
    "puppeteer": "^5.2.1",
    "vm2": "^3.9.2"
  }
}
