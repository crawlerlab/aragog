{
  "name": "aragog",
  "version": "0.1.0",
  "description": "Web crawler framework",
  "author": "Fei Liu",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch src --exec node --inspect -r ts-node/register ./src/main.ts",
    "build": "rimraf dist && tsc -p tsconfig.server.json && cp src/headless/jquery*.js dist/headless",
    "init-docker": "rimraf docker/aragog-server/package.json docker/aragog-server/yarn.lock docker/aragog-server/dist && cp -r dist package.json yarn.lock docker/aragog-server",
    "build:client": "rimraf client/build && tsc -d -p tsconfig.client.json",
    "server": "node dist/main.js",
    "lint": "tsc --noEmit -p tsconfig.server.json && tsc --noEmit -p tsconfig.client.json && eslint --ext .ts ./src ./client ./test",
    "test": "jest --verbose --runInBand --detectOpenHandles --forceExit",
    "test:cov": "yarn test --coverage",
    "upload-cov": "codecov --disable=gcov"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.13",
    "@types/cheerio": "^0.22.18",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.155",
    "@types/puppeteer": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "codecov": "^3.7.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "amqplib": "^0.5.6",
    "axios": "^0.19.2",
    "cheerio": "^1.0.0-rc.3",
    "fs-extra": "^9.0.1",
    "iconv-lite": "^0.6.0",
    "lodash": "^4.17.15",
    "log4js": "^6.3.0",
    "puppeteer": "^3.3.0",
    "vm2": "^3.9.2"
  }
}
